@page
@model ResumeModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en" class="h-full">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="robots" content="noindex">

    <title>Paul Samways - Resume</title>

    <meta name="author" content="Paul Samways">

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <link rel="stylesheet" href="css/site.css">

    <style>
        @@page {
            size: 210mm 297mm;
            margin: 0;
        }
    </style>
    <script type="text/javascript">
        const ps = new URLSearchParams(window.location.search);
        if (ps.get('auto') === "1") {
            window.print();
        };
    </script>
</head>

<body class="flex h-full text-xs">
    <div class="bg-zinc-200 h-full max-w-[16rem] flex-shrink-0 pt-16 pl-2">

        <img class="rounded-full mx-8 my-4 " alt="Paul Samways" src="img/headshot.jpeg" />

        <section class="p-4">
            <h2 class="mb-2 font-bold text-zinc-900">Contact</h2>

            <div class="pt-2 flex flex-row items-center gap-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
                <span>paul@samways.id.au</span>
            </div>
            <div class="pt-2 flex flex-row items-center gap-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
                <span>+61 434 919 877</span>
            </div>
            <div class="pt-2 flex flex-row items-center gap-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>

                <span>Canberra, Australia</span>
            </div>
        </section>

        <section class="p-4">
            <h2 class="font-bold text-zinc-900">About</h2>

            <p class="mt-2">Pragmatic software engineer who has been professionally writing software since 2006.</p>
                
            <p class="mt-2">Experienced in modern web application and service development using .NET, TypeScript and Go.</p>

            <p></p>
        </section>

        
        <section class="p-4">
            <h2 class="font-bold text-zinc-900">Education</h2>

            <p class="mt-2">
                Graduate Diploma of Computing &mdash; partial completion<br />
                <span class="text-zinc-600">Australian National University, 2015</span>
            </p>

            <p class="mt-4">
                Diploma of Information Technology, 
                Network Engineering<br />
                <span class="text-zinc-600">Riverina Tafe Campus, 2005</span>
            </p>

            <p class="mt-4">
                Higher School Certificate<br />
                <span class="text-zinc-600">Wagga Wagga High School, 2003</span>
            </p>
        </section>

        <section class="p-4">
            <h2 class="font-bold text-zinc-900">Technology</h2>

            <ul class="mt-2 ml-2 list-inside list-[square]">
                @foreach (var skill in Model.Skills.LeafNodes()) {
                    <li>@skill.Name</li>
                }
            </ul>
        </section>
    </div>
    <div class="flex-1 px-4 py-16 flex flex-col">
        <div class="mx-2 pb-2 border-b border-zinc-400 flex-shrink-0">
            <h1 class="text-zinc-900 text-3xl">Paul Samways</h1>
            <h2 class="text-zinc-900 text-xl">Senior Software Engineer</h2>
        </div>
        <div class="mx-2 flex-1">
            @foreach (var p in Model.Positions) {
                <div class="mt-6">
                    <h4 class="text-zinc-900 font-bold">@p.Name</h4>
                    <h5 class="text-zinc-700 mt-1">@p.Organisation: @p.StartDate - @(p.EndDate ?? "Present")</h5>
                    <ul class="list-inside list-[square] ml-2 mt-2 leading-5">
                        @foreach (var r in p.Responsibilities) 
                        {
                            <li>@Html.Raw(Markdig.Markdown.ToPlainText(r))</li>
                        }
                    </ul>

                </div>
            }
        </div>
        <div class="text-center italic">
            An update to date and expanded version of this resume is available from https://paul.samways.id.au/resume
        </div>
    </div>
</body>

</html>